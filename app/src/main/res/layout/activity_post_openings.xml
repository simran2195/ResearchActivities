<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.simran.researchactivities.PostOpenings">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POST a Job Opening"
        android:textSize="30dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:textColor="#3FADA8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl00"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView2"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="simran13104@iiitd.ac.in"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posting As: "
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical"
        android:id="@+id/textView3"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:hint="Enter Title"
        android:textCursorDrawable="@null"
        android:textSize="15dp"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:background="#6ca8d8e0"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/editText">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl1"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For"
                    android:textSize="15dp"
                    android:id="@+id/txtfor"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#3FADA8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <!--android:layout_marginTop="31dp"-->

                <Spinner
                    android:layout_width="210dp"
                    android:id="@+id/spinnerFor"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right">

                </Spinner>

                <!--<EditText-->
                    <!--android:layout_width="240dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/editfor"-->
                    <!--android:textSize="15dp"-->
                    <!--android:hint="MTech / BTech"-->
                    <!--android:gravity="center_horizontal"-->
                    <!--android:layout_alignParentTop="true"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_alignParentEnd="true"/>-->
                <!--<ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtfor"
                    android:layout_marginTop="31dp">
                </ListView>-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/rl2"
                android:layout_below="@+id/rl1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Guide"
                    android:textSize="15dp"
                    android:id="@+id/txtprof"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="#3FADA8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:id="@+id/editprof"
                    android:hint="Enter Mentor Name"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/rl3"
                android:layout_below="@+id/rl2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Duration"
                    android:textSize="15dp"
                    android:id="@+id/txtduration"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="#3FADA8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:id="@+id/editduration"
                    android:hint="Enter Duration"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/rl4"
                android:layout_below="@+id/rl3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Period"
                    android:textSize="15dp"
                    android:id="@+id/txtstarting"
                    android:textColor="#3FADA8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:id="@+id/editstarting"
                    android:hint="Enter Starting Month, Year"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/rl5"
                android:layout_below="@+id/rl4"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Domain"
                    android:textSize="15dp"
                    android:id="@+id/txtdomain"
                    android:textColor="#3FADA8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:id="@+id/editdomain"
                    android:hint="Enter Keywords"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/rl6"
                android:orientation="horizontal"
                android:layout_below="@+id/rl5"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pre Req"
                    android:textSize="15dp"
                    android:id="@+id/txtprereq"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#3FADA8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <!--android:layout_marginTop="31dp"-->


                <EditText
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editprereq"
                    android:textSize="15dp"
                    android:hint="Enter pre requisites"
                    android:gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
                <!--<ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtfor"
                    android:layout_marginTop="31dp">
                </ListView>-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/rl7"
                android:layout_below="@+id/rl6"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Type"
                    android:textSize="15dp"
                    android:id="@+id/txttype"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="#3FADA8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:layout_width="210dp"
                    android:id="@+id/spinnerType"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right">

                </Spinner>

                <!--<EditText-->
                    <!--android:layout_width="240dp"-->
