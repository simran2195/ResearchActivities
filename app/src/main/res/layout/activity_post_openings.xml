                    <!--android:id="@+id/edittype"-->
                    <!--android:hint="BTP / IP / Internship"-->
                    <!--android:layout_alignParentTop="true"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_alignParentEnd="true" />-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/rl8"
                android:layout_below="@+id/rl7"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tools"
                    android:textSize="15dp"
                    android:id="@+id/txtlang"
                    android:textColor="#3FADA8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:id="@+id/editlang"
                    android:hint="Enter Languages and Tools"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <!-- /////////////////////////////////////////////////////////////////////////////////////////////////////// -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/rl9"
                android:layout_below="@+id/rl8"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stipend"
                    android:textSize="15dp"
                    android:id="@+id/txtcompensation"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#3FADA8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <!--android:layout_marginTop="31dp"-->


                <EditText
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editcompensation"
                    android:textSize="15dp"
                    android:hint="Enter Stipend / Credits"
                    android:gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
                <!--<ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtfor"
                    android:layout_marginTop="31dp">
                </ListView>-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/rl10"
                android:layout_below="@+id/rl9"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Institute"
                    android:textSize="15dp"
                    android:id="@+id/txtinstitute"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="#3FADA8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:id="@+id/editinstitute"
                    android:hint="Enter Institute / Company"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl11"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_below="@+id/rl10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preferred"
                    android:textSize="15dp"
                    android:id="@+id/txtpreferred"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#3FADA8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <!--android:layout_marginTop="31dp"-->


                <EditText
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editpreferred"
                    android:textSize="15dp"
                    android:hint="Enter skills preferred"
                    android:gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
                <!--<ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtfor"
                    android:layout_marginTop="31dp">
                </ListView>-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/rl12"
                android:layout_below="@+id/rl11"
                android:layout_marginBottom="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Summary"
                    android:textSize="15dp"
                    android:id="@+id/txtsummary"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="#3FADA8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:id="@+id/editsummary"
                    android:hint="Enter a brief summary"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3FADA8"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:text="Create  Post"
                android:id="@+id/createPostBtn"
                android:layout_below="@+id/rl12"
                android:layout_marginBottom="10dp"
                android:onClick="onClickCreatePost"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/createPostBtn"/>

