<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:scrollbars="none"
    >

    <!--android:background="#C5CAE9"-->
    <!--android:foreground="?attr/selectableItemBackground"-->
    <!--android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageLayout"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="abc"
                android:src="@drawable/seminar"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:backgroundTint="#c9ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="13dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seminarDetails"
            android:layout_below="@id/imageLayout"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seminarTitle">

                <!--<TextView-->
                    <!--android:id="@+id/titleLabel"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="14dp"-->
                    <!--android:text="Title"-->
                    <!--android:textColor="@color/colorPrimary"-->
                    <!--android:textStyle="bold"-->
                    <!--android:elegantTextHeight="true"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_alignParentTop="true" />-->

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"


                    android:text="Seminar's Title"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:elegantTextHeight="true"

                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seminarSpeaker"
                android:layout_below="@id/seminarTitle">

                <TextView
                    android:id="@+id/speakerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Speaker"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:elegantTextHeight="true"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true" />



                <TextView
                    android:id="@+id/speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_toRightOf="@id/speakerLabel"

                    android:text="Speaker"
                    android:textColor="#000000"
                    android:elegantTextHeight="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seminarDate"
                android:layout_below="@id/seminarSpeaker">

                <TextView
                    android:id="@+id/dateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Date"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:elegantTextHeight="true"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true" />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_toRightOf="@id/dateLabel"

                    android:text="Date"
                    android:textColor="#000000"
                    android:elegantTextHeight="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seminarAbstractView"
                android:layout_below="@id/seminarDate">

                <TextView
                    android:id="@+id/abstractLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Abstract"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:elegantTextHeight="true"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true" />



                <TextView
                    android:id="@+id/seminarAbstract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_below="@id/abstractLabel"
                    android:text="Abstract"
                    android:textColor="#000000"
                    android:layout_marginTop="2dp"
                    android:elegantTextHeight="true"
                    />

            </RelativeLayout>








        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>